{
  "type": "module",
  "name": "spapp1",
  "productName": "SPAPP",
  "version": "0.0.1",
  "description": "SPAPP - kitchen ARM application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron --inspect=9229 .",
    "build": "electron-builder build --win --x64",
    "lint": "echo \"No linting configured\""
  },
  "build": {
    "appId": "com.yourcompany.spapp",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeaderIcon": "icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "src/customInstall.nsh"
    },
    "directories": {
      "output": "build"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/.bin",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "./src/server.js",
        "to": "./resources/server.js"
      },
      {
            "from": "./node_modules",
            "to": "./resources/node_modules"
      }
    ]
  },
  "keywords": [],
  "author": "NikitaYushchenko",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.8.3",
    "electron-log": "^5.3.2",
    "express": "^4.21.2",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8"
  }
}
